{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "quoteText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "quoteText",
        "label": "Quote text",
        "required": true,
        "ws:disallowedContext": ["edit:panel"],
        "configuration": "kyanite/common/components/common/rte/configurations/default"
      },
      "authorContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "authorName": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "authorName",
          "label": "Author name",
          "required": true
        },
        "authorCompany": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "authorCompany",
          "label": "Author company"
        },
        "authorPhotoPath": {
          "sling:resourceType": "wcm/dialogs/components/pathpicker",
          "rootPath": "/content",
          "name": "authorPhotoPath",
          "description": "Author square photo asset (optional)",
          "label": "Author photo",
          "ws:disallowedContext": [
            "edit:panel"
          ]
        },
        "authorPhotoAlt": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "authorPhotoAlt",
          "label": "Author photo alt",
          "ws:disallowedContext": [
            "edit:panel"
          ]
        }
      }
    }
  }
}
