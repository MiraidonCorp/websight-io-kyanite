          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "No background",
          "value": ""
        },
        "lines": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Lines",
          "value": "lines"
        },
        "squares": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Squares",
          "value": "squares"
        }
      }
    },
    "metadata": {
