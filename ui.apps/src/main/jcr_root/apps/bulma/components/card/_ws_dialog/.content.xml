<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
    <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tabs">
        <generalTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="General">
            <header
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="header"
                    label="Card header"
            />
            <title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="title"
                    label="Title"
            />
            <subtitle
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="subtitle"
                    label="Subtitle"
            />
            <content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="content"
                    label="Content"
            />
        </generalTab>
        <thumbnail
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="Thumbnail">
            <assetReference
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/assetreference"
                    mimeTypes="[image/*]"
                    name="thumbnail/assetReference"
                    description="Default image source"
                    label="Choose image"/>
            <src
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/pathpicker"
                    rootPath="/content"
                    name="thumbnail/src"
                    description="Secondary image source"
                    label="Use this if you want a link to image from web"/>
            <alt
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="thumbnail/alt"
                    label="Alt text"/>
        </thumbnail>
        <mainImage
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="Image">
            <assetReference
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/assetreference"
                    mimeTypes="[image/*]"
                    name="image/assetReference"
                    description="Default image source"
                    label="Choose image"/>
            <src
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/pathpicker"
                    rootPath="/content"
                    name="image/src"
                    description="Secondary image source"
                    label="Use this if you want a link to image from web"/>
            <alt
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="image/alt"
                    label="Alt text"/>
        </mainImage>
        <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="Footer">
            <url1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/pathpicker"
                    name="urls/1/address"
                    label="URL"/>
            <url1Label
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="urls/1/label"
                    label="Label"/>
            <url2
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/pathpicker"
                    name="urls/2/address"
                    label="URL"/>
            <url2Label
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="urls/2/label"
                    label="Label"/>
        </footer>
    </tabs>
</jcr:root>